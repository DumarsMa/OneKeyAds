<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerAdsView">
        <attr name="adsId" format="string"/>
        <attr name="adsCarousel" format="boolean"/>
        <!--宽高比-->
        <attr name="aspectRatio" format="string"/>
    </declare-styleable>

    <declare-styleable name="NativeAdView">
        <!--广告id-->
        <attr name="nativeAdId" format="string"/>
        <!--内部容器布局-->
        <attr name="nativeAdInflateId" format="reference"/>
        <!--视频是否静音-->
        <attr name="nativeAdVideoMute" format="boolean"/>
        <!--视频是否循环-->
        <attr name="nativeAdVideoLoop" format="boolean"/>
        <!--广告选择叠加层-->
        <attr name="nativeAdChoicesPlacementPosition" format="integer">
            <enum name="TopLeft" value="0"/>
            <!--默认右上角-->
            <enum name="TopRight" value="1"/>
            <enum name = "BottomRight" value="2"/>
            <enum name="BottomLeft" value="3"/>
        </attr>
        <!--图片或视频的宽高比-->
        <attr name="nativeAdMediaAspectRatio" format="integer">
            <enum name="any" value="1"/>
            <enum name="landscape" value="2"/>
            <enum name="portrait" value="3"/>
            <enum name="square" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="NativeAdsContentContainer">
        <attr name="nativeAdMediaId" format="reference"/>
        <attr name="nativeAdHeadLineId" format="reference"/>
        <attr name="nativeAdStarId" format="reference"/>
        <attr name="nativeAdDescId" format="reference"/>
        <attr name="nativeAdPriceId" format="reference"/>
        <attr name="nativeAdStoreId" format="reference"/>
        <attr name="nativeAdActionId" format="reference"/>
        <attr name="nativeAdAppIconId" format="reference"/>
        <attr name="nativeAdAdvertiserId" format="reference"/>
    </declare-styleable>
    <declare-styleable name="NativeAdsView_Layout">
        <attr name="nativeAdChildType" format="integer">
            <enum name="Media" value="0"/>
            <enum name="HeadLine" value="1"/>
            <enum name="Star" value="2"/>
            <enum name="Description" value="3"/>
            <enum name="Price" value="4"/>
            <enum name="Store" value="5"/>
            <enum name="Action" value="6"/>
            <enum name="AppIcon" value="7"/>
            <enum name="Advertiser" value="8"/>
        </attr>
    </declare-styleable>
</resources>